{% extends "MainBundle::base.html.twig" %}

{% block title %}Produit{% endblock %}

{% block navBoutique %}class="active"{% endblock %}

{% block body %}
<main>
	<div class="container blank formulaire">
		<div class="col-md-8 col-md-offset-4">
			<form class="cnxForm" enctype="multipart/form-data" method="post" action="" id="modifProduit">
				<label for="Nom">Nom :</label>
				<input type="text" name="nom" placeholder="Entrer un nom de produit" size="30"
				{% if produit.nomProduit is defined %}value="{{produit.nomProduit}}"{% endif %} required>
				<label for="Description">Description :</label>
				<textarea name="desc" placeholder="Entrer un description de produit" required>{% if produit.descriptionProduit is defined %}{{produit.descriptionProduit}}{% endif %}</textarea>
				<label for="Prix">Prix (â‚¬) :</label>
				<input type="number" step="0,01" name="prix" placeholder="Entrer un prix" size="5"
				{% if produit.prixProduit is defined %}value="{{produit.prixProduit}}"{% endif %} required>
				<label for="Stock">Stock :</label>
				<input type="number" name="stock" placeholder="Entrer un stock" size="5"
				{% if produit.stock is defined %}value="{{produit.stock}}"{% endif %} required>
				{% if produit.imgProd is defined %}
					{% for img in produit.imgProd if img.typeImg.idType == 1 %}
						<img src="{{asset('img/')}}{{img.chemin}}" alt="image produit" title="{{produit.nomProduit}}">
					{% endfor %}
				{% endif %}
				<input type="file" name="prodImg" required>
				{% if produit.idProduit is defined %}
					<input type="submit" class="btn btn-default" name="modProd" value="Modifier">
				{% else %}
					<input type="submit" class="btn btn-default" name="addProd" value="Enregistrer">
				{% endif %}
			</form>
			{% if produit.idProduit is defined %}
				<form action="" method="post">
					<input type="submit" class="btn btn-default" name="delProd" value="Supprimer">
				</form>
			{% endif %}	
		</div>
	</div>
	<div class="espaceBas"></div>
</main>
{% endblock %}