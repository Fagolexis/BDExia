{% extends "MainBundle::base.html.twig" %}

{% block title %}Inscription/Connexion{% endblock %}

{% block navCnx %}class="active"{% endblock %}

{% block body %}
<main>
	<div class="container">
		<center>
		<h1>Page de connexion du site du BDE CESI eXia</h1>
		<h3>{{errormessage}}</h3>
		</center>
		<ul class="nav nav-pills">
			<li class="active"><a href="#cnxTab" data-toggle="tab">Connexion</a></li>
			<li><a href="#insTab" data-toggle="tab">Inscription</a></li>
		</ul>
		<div class="blank formulaire">
			<div class="col-md-offset-4 col-md-8">
				<div class="tab-content clearfix">
					<div class="tab-pane" id="insTab">
						<form class="cnxForm" action="" method="post">
							<label for="Nom">Nom :</label>
							<input type="text" name="Nom" placeholder="Entrer votre nom de famille" size="30" required>
							<label for="Prenom">Prénom :</label>
							<input type="text" name="Prenom" placeholder="Entrer votre prénom" size="30" required>
							<fieldset>
								<label for="Date">Date de naissance :</label>
								<input type="date" name="Naissance" placeholder="JJ" required>
							</fieldset>
							<label for="Promo">Promotion :</label>
							<select name="Promo">
								<option value="1">A1</option>
								<option value="2">A2</option>
								<option value="3">A3</option>
								<option value="4">A4</option>
								<option value="5">A5</option>
							</select>
							<label for="Avatar">Avatar :</label>
							<input type="file" name="Avatar">
							<label for="Telephone">Numéro de téléphone :</label>
							<input type="tel" name="Telephone" maxlength="10" placeholder="Entrer votre numéro de téléphone" size="30">
							<label for="Email">Mail :</label>
							<input type="email" name="Email" placeholder="Entrer votre adresse mail" size="30" required>
							<label for="Mdp">Mot de passe :</label>
							<input type="password" name="Mdp" placeholder="Entrer un mot de passe sécurisé" size="30" required>
							<input class="btn btn-default" type="submit" name="submitInscription" value="S'inscrire">
						</form>
					</div>
					<div class="tab-pane active" id="cnxTab">
						<form class="cnxForm" action="" method="post">
							<label for="Email">Mail : </label>
							<input name= "Email" type="email" placeholder="Entrer votre adresse mail" size="30" required>
							<label for="Mdp">Mot de passe : </label>
							<input name= "Mdp" type="password" placeholder="Entrer votre mot de passe" size="30" required>
							<input class="btn btn-default" type="submit" name="submitConnexion" value="Se connecter">
						</form>
					</div>
				</div>
			</div>
		</div>
  </div>
</main>
{% endblock %}
