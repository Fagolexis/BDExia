{% extends "::base.html.twig" %}

{% block title %}MainBundle:Connexion:Connexion{% endblock %}

{% block body %}
<h1>Page de connexion du site du BDE CESI eXia</h1>
<p>Id : {{app.session.get('idUser')}}</p>
<p>Role : {{app.session.get('roleUser')}}</p>
<form method="post" action="" id="connexion">
	<span>Email</span>
	<input type="Email" name="mail" placeholder="mail" required>
	<span>Password</span>
	<input type="password" name="password" placeholder="password" required>
	<input type="submit" name="submitConnexion" value="Connexion">
</form>
<h3>{{errormessage}}</h3>
<form method="post" action="" id="inscription">
	<span>Nom</span>
	<input type="input" name="Nom" placeholder="Nom" required>
	<span>Prenom</span>
	<input type="input" name="Prenom" placeholder="Prenom" required>
	<span>Email</span>
	<input type="Email" name="Email" placeholder="Email" required>
	<span>Mot de passe</span>
	<input type="password" name="Password" placeholder="Password" required>
	<span>Date de naissance</span>
	<input type="date" name="Naissance" required>
	<span>Promotion</span>
	<SELECT name="Promotion">
		<option value="1">A1</option>
		<option value="2">A2</option>
		<option value="3">A3</option>
		<option value="4">A4</option>
		<option value="5">A5</option>
	</SELECT>
	<span>Avatar</span>
	<input type="file" name="Avatar">
	<span>Numr√©o de telephone</span>
	<input type="tel" name="Telephone" placeholder="Telephone">
	<input type="reset" name="Reset">
	<input type="submit" name="submitInscription" value="S'inscrire">
</form>
{% endblock %}
